<div class="container">
  <div class="col-14">
    <div class="row">
      <p><%= link_to "Invite a new client to signup", trainer_invite_path, class: "btn-primary" %></p>
    </div>
    <div id="clients">
      <% @trainer.clients.each do |client| %>
        <div class="row">
          <div class="client-<%= client.id %>">
            <%= button_to "#{client.first_name} #{client.last_name}", trainer_client_path(client.id), method: :get %>
            <%= link_to client.email, client.email %>
            <div id="myProgress">Progress over last 7 days
              <div id="myBar" style="width: <%= client.progress %>; background-color: blue"></div>
            </div>
          </div><br>
        </div>
      <% end %>
    </div>
  </div>
</div>
