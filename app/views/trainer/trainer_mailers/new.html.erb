<div class="container">
  <div class="col-14">
    <div class="row">
      <h1 class="client-heading">Send an e-mail to your client:</h1>
    </div>
    <div class="row">
      <h2>Sending to: <%= @client.first_name.capitalize %> <%= @client.last_name.capitalize %></h2>
    </div>
    <br>
    <div class="row">
      <%= form_tag trainer_mailers_create_path(client: @client) do %>
      <div class="col">
        <%= label_tag :email %>
      </div>
      <div class="col">
        <%= text_area_tag :email %>
      </div>
      <br>
      <%= submit_tag 'Send Email', class: "btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
