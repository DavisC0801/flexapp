<div class="container">
  <div class="col-14 centered ml-auto mr-auto">
    <div class="row">
      <h1>Enter the client's E-mail address</h1>
    </div>
    <br>
    <%= form_tag(trainer_invite_path, method: :post) do %>
      <div class="col">
        <%= label_tag(:email, "Client Email") %>
      </div>
      <div class="col">
        <%= text_field(:email, "Client Email") %>
      </div>
      <br>
      <%= submit_tag("Invite", class: "btn-primary") %>
    <% end %>
  </div>
</div>
