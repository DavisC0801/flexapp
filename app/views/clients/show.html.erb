<div class="container">
  <div class="col-14">
    <div class="row">
      <div class="col">
        <h3>Meal Tracker</h3>
        <p>Track past meals, log new meals and see what recipes your trainer recommends</p>
        <canvas id="meal-graph" width="400" height="400"></canvas>

        <%= link_to "Log a Meal", new_meal_logs_path, class: "btn-primary" %><br>
        <% if current_client.meal_plan %>
          <%= link_to "See Trainer Meal Suggestions", clients_recipes_path, class: "btn-primary" %>
        <% end %>
      </div>

      <div class="col">
        <h3>Weight Tracker</h3>
        <p>Track weight over time, log daily weight</p>
        <canvas id="weight-graph" width="400" height="400"></canvas>
        <%= link_to "Log Weight", weight_logs_new_path, class: "btn-primary" %>
      </div>
    </div>
  </div>
</div>

<script>
let mealNames = <%= facade.meal_names %>;
var mealGraph = document.getElementById('meal-graph');
var weightGraph = document.getElementById('weight-graph');
var mealGraph = new Chart(mealGraph, {
    type: 'line',
    data: {
        labels: ['Meal 1', 'Meal 2', 'Meal 3', 'Meal 4', 'Meal 5', 'Meal 6'],
        datasets: [{
            label: 'Carbs',
            data: [12, 19, 3, 5, 2, 3],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
            ],
            borderWidth: 1
        },
        {
          label: 'Fats',
          data: [1, 2, 3, 6, 10, 13],
          backgroundColor: [
              'rgba(54, 162, 235, 0.2)',
          ],
          borderColor: [
              'rgba(54, 162, 235, 1)',
          ],
          borderWidth: 1
        },
        {
          label: 'Sugars',
          data: [2, 3, 7, 20, 30, 1],
          backgroundColor: [
              'rgba(255, 206, 86, 0.2)',
          ],
          borderColor: [
              'rgba(255, 206, 86, 1)',
          ],
          borderWidth: 1
        },
        {
          label: 'Protein',
          data: [2, 2, 1, 7, 1, 10],
          backgroundColor: [
              'rgba(75, 192, 192, 0.2)',
          ],
          borderColor: [
              'rgba(75, 192, 192, 1)',
          ],
          borderWidth: 1
        },
      ]
    },
});
var weightGraph = new Chart(weightGraph, {
    type: 'line',
    data: {
      labels: ['Day 1', 'Day 2', 'Day 3', 'Day 4', 'Day 5', 'Day 6'],
      datasets: [{
          label: 'Weight',
          data: [180, 190, 210, 199, 180, 120],
          backgroundColor: [
              'rgba(255, 159, 64, 0.2)'
          ],
          borderColor: [
              'rgba(255, 159, 64, 1)'
          ],
          borderWidth: 1
      }]
    },
});
</script>

