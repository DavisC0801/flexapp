<div class="container">
  <div class="col-14 centered ml-auto mr-auto">
    <div class="row">
      <h1 class="client-heading">Message your Trainer</h1>
    </div>
    <br>
    <div class="row">
      <h2>Consider using your name in the text message so your trainer knows who you are.</h2>
    </div>
    <br>
    <%= form_tag trainer_messages_create_path do %>
      <div class="col">
        <%= label_tag :message %>
      </div>
      <div class="col">
        <%= text_area_tag :message %>
      </div>
      <br>
      <%= submit_tag 'Send Message', class: "btn-primary" %>
    <% end %>
  </div>
</div>
